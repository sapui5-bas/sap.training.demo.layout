<mvc:View controllerName="sap.training.controller.Panel" xmlns:core="sap.ui.core" xmlns:f="sap.ui.layout.form"
	xmlns:html="http://www.w3.org/1999/xhtml" xmlns:l="sap.ui.layout" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m">
	<Panel expandable="true" expanded="true" width="350px">
		<headerToolbar>
			<Toolbar>
				<content>
					<Text text="Person Data"/>
					<ToolbarSpacer/>
					<Button icon="sap-icon://save" press="onSave"/>
					<Button icon="sap-icon://sys-cancel" press="onCancel"/>
				</content>
			</Toolbar>
		</headerToolbar>
		<content>
			<f:SimpleForm>
				<f:content>
					<Label text="Name"/>
					<Input type="Text" value="Knecht"/>
					<Label text="First Name"/>
					<Input type="Text" value="Christoph"/>
				</f:content>
			</f:SimpleForm>
		</content>
	</Panel>
</mvc:View>