<mvc:View controllerName="sap.training.controller.Grid"
          xmlns:html="http://www.w3.org/1999/xhtml"
          xmlns:l="sap.ui.layout"
	      xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m">
	
	<l:Grid hSpacing="1" vSpacing="1">
		<l:content>
			<Label labelFor="idNameInput" text="Name">
				<layoutData>
					<l:GridData span="L2 M4 S12"/>
				</layoutData>
			</Label>
			<Input id="idNameInput" value="Doe" width="100%">
				<layoutData>
					<l:GridData span="L10 M8 S12"/>
				</layoutData>
			</Input>
			<Label labelFor="idFirstNameInput" text="First Name">
				<layoutData>
					<l:GridData span="L2 M4 S12"/>
				</layoutData>
			</Label>
			<Input id="idFirstNameInput" value="John" width="100%">
				<layoutData>
					<l:GridData span="L10 M8 S12"/>
				</layoutData>
			</Input>
			<Button text="Submit" width="100%">
				<layoutData>
					<l:GridData indent="M4" span="L2 M8 S12"/>
				</layoutData>
			</Button>
		</l:content>
	</l:Grid>
	
	<l:VerticalLayout>
		<l:content>
			<MessageStrip id="idStandardMessage" text="Rangeset SAP_STANDARD:" type="Information" showIcon="true" />
			<MessageStrip id="idExtendedMessage" text="Rangeset SAP_STANDARD_EXTENDED:" type="Information" showIcon="true"/>
		</l:content>
	</l:VerticalLayout>
	
</mvc:View>

