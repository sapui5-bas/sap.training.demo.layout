<mvc:View controllerName="sap.training.controller.SimpleForm"
		  xmlns:html="http://www.w3.org/1999/xhtml"
		  xmlns:core="sap.ui.core"
		  xmlns:f="sap.ui.layout.form"
		  xmlns:l="sap.ui.layout"
		  xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m">
	
	<f:SimpleForm
			layout="ResponsiveGridLayout"
			breakpointXL="1440"
			breakpointL="1024"
			breakpointM="600"
			columnsXL="-1"
			columnsL="2"
			columnsM="1"
			emptySpanXL="-1"
			emptySpanL="0"
			emptySpanM="0"
			emptySpanS="0"
			labelSpanXL="-1"
			labelSpanL="4"
			labelSpanM="2"
			labelSpanS="12"
			adjustLabelSpan="true"
			singleContainerFullSize="true">
		<f:title>
			<core:Title text="Address Data"/>
		</f:title>
		<f:content>
			<core:Title text="Person Data"/>
			<Label text="Name"/>
			<Input value="John"/>
			<Input value="Doe"/>
			<Label text="Date of Birth"/>
			<DatePicker value="1970-01-01"/>
			<core:Title text="Company"/>
			<Label text="Name / Location"/>
			<Input value="SAP SE"/>
			<Input value="69190 Walldorf"/>
			<Label text="Phone"/>
			<Input value="+49">
				<layoutData>
					<l:GridData span="L1 M2 S4"/>
				</layoutData>
			</Input>
			<Input value="6227">
				<layoutData>
					<l:GridData span="L3 M3 S8"/>
				</layoutData>
			</Input>
			<Input value="7-47474">
				<layoutData>
					<l:GridData span="L4 M5 S12"/>
				</layoutData>
			</Input>
		</f:content>
	</f:SimpleForm>
	
</mvc:View>