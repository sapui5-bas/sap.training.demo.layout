<mvc:View controllerName="sap.training.controller.ResponsiveFlowLayout"
          xmlns:html="http://www.w3.org/1999/xhtml"
          xmlns:l="sap.ui.layout"
	      xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m">
	
	<l:ResponsiveFlowLayout>
		<l:content>
			<l:VerticalLayout width="100%">
				<l:layoutData>
					<l:ResponsiveFlowLayoutData minWidth="200" margin="true"/>
				</l:layoutData>
				<l:content>
					<Label labelFor="idInput" text="Name:"/>
					<Input id="idInput" value="Doe"/>
				</l:content>
			</l:VerticalLayout>
			<l:VerticalLayout width="100%">
				<l:layoutData>
					<l:ResponsiveFlowLayoutData weight="2" margin="true"/>
				</l:layoutData>
				<l:content>
					<Label labelFor="idFirstNameInput" text="First Name:"/>
					<Input id="idFirstNameInput" value="John"/>
				</l:content>
			</l:VerticalLayout>
		</l:content>
	</l:ResponsiveFlowLayout>
	
</mvc:View>